<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <TextView
            android:id="@+id/fullNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="16sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/fullNameLayout"
            android:id="@+id/fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/emailLayout"
            android:layout_below="@id/fullNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="14sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/emailTextView"
            android:layout_below="@id/fullNameTextView"
            android:layout_toEndOf="@id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/phoneLayout"
            android:layout_below="@id/emailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/phoneTextView"
            android:layout_below="@id/emailTextView"
            android:layout_toEndOf="@id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Phone"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/accountTypeLayout"
            android:layout_below="@id/phoneLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Type:"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_below="@id/phoneTextView"
            android:layout_toEndOf="@id/accountTypeLayout"
            android:id="@+id/accountTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Account Type"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/users_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_options"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>
